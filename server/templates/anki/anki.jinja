{% extends "anki/layout.jinja" %}
{% block content %}
    <div>
        <a href="{{ url_for('anki') }}">&lt; Decks</a>
    </div>

    <div>
        <select class="lang">
            <option value="es-MX">Spanish (Mexico)</option>
            <option value="es">Spanish (Spain)</option>
            <option value="zh-CN">Chinese (Mainland)</option>
            <option value="zh-TW">Chinese (Taiwan)</option>
        </select>
        <label><input type="checkbox" class="switch-sides" />Switch Sides (front side should be target language)</label>
    </div>

    <div class="progress-bar"></div>

    <div class="card-cont">
        <div class="card">
            <div class="front-card">
                <div class="front"></div>
                <button class="flip">Flip</button>
            </div>

            <div class="back-card">
                <div class="back">
                    <div class="back-prompt"></div>
                    <div class="back-answer"></div>
                </div>
                <div class="bottom-nav">
                    <button class="next">Next</button>
                    <button class="again">Listen Again</button>
                </div>
            </div>
        </div>
    </div>

    <div>
        <h1>Read aloud</h1>
        <textarea placeholder="Text to read..." class="readaloud-input"></textarea>
        <div><button class="readaloud-submit">Read aloud</button></div>
    </div>

    <script>const DECK = {{ data }};</script>
    <script src="{{ url_for('static', filename='anki/main.js') }}"></script>
{% endblock %}